<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SovchiUz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#405CBF</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimaryVariant">#92405CBF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">#92405CBF</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="background">@color/black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/ttfirsneue_regular</item>
    </style>

    <style name="MyCardViewOverlay">
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">60dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>